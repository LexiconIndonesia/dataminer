# Application Settings
APP_NAME=dataminer
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Settings
DATABASE_URL=postgresql://dataminer:password@localhost:5432/dataminer
TEST_DATABASE_URL=postgresql+asyncpg://dataminer:password@localhost:5432/dataminer_test
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# NATS Settings
NATS_URL=nats://localhost:4222
NATS_STREAM_NAME=dataminer
NATS_SUBJECT_PREFIX=dataminer

# Google Document AI (for OCR fallback)
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PROCESSOR_ID=your-processor-id
GOOGLE_LOCATION=us

# LLM Settings (Gemini)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL_DETAILED=gemini-1.5-pro
GEMINI_MODEL_SUMMARY=gemini-1.5-flash

# Storage (GCS)
GCS_BUCKET_NAME=dataminer-storage
GCS_PROJECT_ID=your-project-id

# Security
SECRET_KEY=your-secret-key-change-this
API_KEY=your-api-key-change-this

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Processing Settings
MAX_WORKERS=4
JOB_TIMEOUT_SECONDS=300
MAX_RETRIES=3

# Cost Settings
DEFAULT_MAX_COST_PER_DOCUMENT=2.00
